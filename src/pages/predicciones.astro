import fs from "fs";
import Layout from "../Layouts/Layout.astro";

interface BolaAtomix {
  Picks: string;
  Bans: string;
  "Mayor winrate": string;
  "Menor winrate": string;
  "Más kills": string;
  KDA: string;
  "Jugadores distintos": string;
  Pentakill: string;
  "Primera sangre": string;
  "Récord kills": string;
  Ancianos: string;
  "Robar barones": string;
  "Victoria más corta": string;
  "Más asesinatos": string;
  Equipos_distintos: string;
  Pentakills: number | string;
  "Barones robados": number | string;
  Remontadas: number;
  "Campeones distintos": number | string;
  Teemo: string;
}

interface PersonaBola {
  nombre: string;
  datos: BolaAtomix;
  aciertos: { [key: string]: number };
}

interface DatosWeb {
  aciertos?: { [participante: string]: { [prediccion: string]: number } };
  [key: string]: any;
}

// Leer aciertos desde datos_web.json
let aciertosData: { [participante: string]: { [prediccion: string]: number } } =
  {};
try {
  const datosWebPath = "./src/data/datos_web.json";
  const datosWebContent = fs.readFileSync(datosWebPath, "utf-8");
  const datosWeb = JSON.parse(datosWebContent) as DatosWeb;
  aciertosData = datosWeb.aciertos || {};
} catch (error) {
  console.error("Error al leer aciertos:", error);
}

// Leer todos los archivos de bolas
const participantes: PersonaBola[] = [];
const bolasFiles = [
  { nombre: "Labradoor13", archivo: "bola_atomix.txt" },
  { nombre: "Alvaro MKOI", archivo: "bola_alvaro_mkoi.txt" },
  { nombre: "ubahh", archivo: "bola_ubahh.txt" },
  { nombre: "Iuar", archivo: "bola_iuar.txt" },
  { nombre: "Terrorizan", archivo: "bola_terrorizan.txt" },
  { nombre: "IsmaBoom", archivo: "bola_ismaboom.txt" },
  { nombre: "Pumba Disléxico", archivo: "bola_pumba_dislexico.txt" },
  { nombre: "ElBartoMoreno", archivo: "bola_elbartomoreno.txt" },
  { nombre: "Taeko", archivo: "bola_taeko.txt" },
  { nombre: "FarAway18", archivo: "bola_faraway18.txt" },
  { nombre: "ClaudiAway18", archivo: "bola_claudiaway18.txt" },
  { nombre: "20raul20", archivo: "bola_20raul20.txt" },
];

for (const bola of bolasFiles) {
  try {
    const bolaPath = `./src/bolas/${bola.archivo}`;
    const bolaContent = fs.readFileSync(bolaPath, "utf-8");
    const datos = JSON.parse(bolaContent) as BolaAtomix;
    const aciertos = aciertosData[bola.nombre] || {};
    participantes.push({ nombre: bola.nombre, datos, aciertos });
  } catch (error) {
    console.error(`Error al leer ${bola.archivo}:`, error);
  }
}

// Función para obtener la clase CSS según los puntos
function getAciertoClass(puntos: number): string {
  if (puntos >= 50) return "acierto-oro";
  if (puntos >= 20) return "acierto-plata";
  if (puntos >= 10) return "acierto-bronce";
  return "";
}
