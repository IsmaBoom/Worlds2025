  <script is:inline>
    function mostrarPredicciones(index) {
      // Ocultar selector
      const selector = document.getElementById("selector-view");
      if (selector) selector.style.display = "none";

      // Ocultar todas las predicciones
      document.querySelectorAll(".prediccion-view").forEach((view) => {
        view.style.display = "none";
      });

      // Mostrar la predicción seleccionada
      const prediccion = document.getElementById(`prediccion-${index}`);
      if (prediccion) prediccion.style.display = "block";

      // Scroll al inicio
      window.scrollTo(0, 0);
    }

    function volverSelector() {
      // Ocultar todas las predicciones
      document.querySelectorAll(".prediccion-view").forEach((view) => {
        view.style.display = "none";
      });

      // Mostrar selector
      const selector = document.getElementById("selector-view");
      if (selector) selector.style.display = "grid";

      // Scroll al inicio
      window.scrollTo(0, 0);
    }
  </script>

